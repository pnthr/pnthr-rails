= simple_form_for @instance do |f|
  - if @instance.errors.any?
    #error_explanation
      %h2= "#{pluralize(@instance.errors.count, "error")} prohibited this application from being saved:"
      %ul
        - @instance.errors.full_messages.each do |msg|
          %li= msg

  = f.input :name
  = f.input :description, as: :text

  - unless params[:action] == 'edit'
    = f.input :password

  .actions
    = f.button :submit, 'Save Application'
